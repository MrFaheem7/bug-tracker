<h1>Edit Task</h1>

<%= form_with model: [@project, @bug], local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :bug_type, 'Type (Bug or Feature)' %>
    <%= form.select :bug_type, Bug.bug_types.keys.map { |k| [k.humanize, k] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.map { |k| [k.humanize, k] } %>
  </div>
  <div class="field">
     <%= form.label :deadline %>
     <%= form.date_field :deadline %>  <!-- Deadline field -->
  </div>
  <div class="field">
    <%= form.label :developer_id, 'Assign Developer' %>
    <%= form.collection_select :developer_id, @developers, :id, :name %>
  </div>

  <%= form.submit 'Update Task', class: 'btn btn-primary' %>
<% end %>
