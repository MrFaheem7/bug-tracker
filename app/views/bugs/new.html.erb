<h1>Create New Task (Bug or Feature)</h1>
  


<%= form_with model: [@project, @bug] do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :bug_type, 'Type (Bug or Feature)' %>
    <%= form.select :bug_type, Bug.bug_types.keys.map { |k| [k.humanize, k] } %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Bug.statuses.keys.map { |k| [k.humanize, k] } %>
  </div>
  <div class="field">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>  
  </div>
  <div class="field">
    <%= form.label :screenshot, 'Upload Screenshot (PNG or GIF only)' %>
    <%= form.file_field :screenshot %> 
   </div>
  <div class="field">
    <%= form.label :developer_id, 'Assign Developer' %>
    <%= form.collection_select :developer_id, @developers, :id, :name, prompt: 'Select a Developer' %>
  </div>

  <%= form.submit 'Create Task', class: 'btn btn-primary' %>
<% end %>
<%= link_to "Back", :back %>