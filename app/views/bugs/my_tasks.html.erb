<h1 class="mb-4">My Assigned Tasks</h1>

<% if @bugs.any? %>
  <div class="list-group">
    <% @bugs.each do |bug| %>
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h5>
            <%= link_to bug.title, project_bug_path(bug.project, bug), class: "text-primary" %>
          </h5>
          <p class="mb-1"><strong>Status:</strong> <%= bug.status.humanize %></p>
        </div>
        <div>
          <% if  %>
            <%= link_to 'Update Status', edit_project_bug_path(bug.project, bug), class: 'btn btn-outline-secondary' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">You have no tasks assigned at the moment.</div>
<% end %>
